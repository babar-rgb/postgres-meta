{
    "name": "project-nova",
    "private": true,
    "version": "0.1.0",
    "main": "electron/main.cjs",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:4000 && electron electron/main.cjs\"",
        "electron:build": "tsc -b && vite build && electron-builder",
        "lint": "eslint .",
        "preview": "vite preview"
    },
    "dependencies": {
        "@monaco-editor/react": "^4.7.0",
        "@tanstack/react-query": "^5.90.12",
        "@tanstack/react-table": "^8.20.0",
        "@types/dagre": "^0.7.53",
        "@types/papaparse": "^5.5.1",
        "@xyflow/react": "^12.10.0",
        "clsx": "^2.1.0",
        "dagre": "^0.8.5",
        "lucide-react": "^0.344.0",
        "papaparse": "^5.5.3",
        "pg": "^8.16.3",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-router-dom": "^6.22.3",
        "recharts": "^3.5.1",
        "zustand": "^5.0.9"
    },
    "devDependencies": {
        "@types/node": "^20.11.24",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.18",
        "concurrently": "^9.2.1",
        "electron": "^39.2.6",
        "electron-builder": "^26.0.12",
        "postcss": "^8.4.35",
        "postcss-simple-vars": "^7.0.1",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.2.2",
        "vite": "^5.1.4",
        "wait-on": "^9.0.3"
    },
    "build": {
        "appId": "com.projectnexus.app",
        "productName": "Project Nexus",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "electron/**/*"
        ],
        "mac": {
            "target": "dmg"
        },
        "win": {
            "target": "nsis"
        },
        "linux": {
            "target": "AppImage"
        }
    }
}
